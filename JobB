pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
    }
    post {
        // Only trigger JobC if JobB succeeds
        success {
            // Do not fail JobB if JobC fails
            build job: 'JobC', propagate: false
        }
        // Optional: always run JobC regardless of JobB result
        /*
        always {
            build job: 'JobC', propagate: false
        }
        */
    }
}
