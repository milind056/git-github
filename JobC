pipeline {
    agent any
    stages {
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
    post {
        always {
            // Send email notification
            emailext(
                to: 'yankit056@gmail.com',
                subject: "Jenkins Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' Completed",
                body: """Jenkins Job Complted,

The Jenkins job '${env.JOB_NAME}' has completed.
Build URL: ${env.BUILD_URL}
Status: ${currentBuild.currentResult}
"""
            )

            // Clear workspace
            cleanWs()
        }
    }
}
