pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }

    post { 
        success {
            emailext (
                subject: "Build Successful: ${env.JOB_NAME}",
                body: "Build completed successfully. See details at ${env.BUILD_URL}",
                to: 'yankit056@gmail.com'
            )
        }
        always {
            // Clears the workspace after the build
            cleanWs()
        }
    }
}


